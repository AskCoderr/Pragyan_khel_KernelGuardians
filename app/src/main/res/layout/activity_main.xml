<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />

    <!-- OpenGL ES rendering surface (background blur) -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Tracking boxes + segmentation overlay -->
    <com.pragyan.kernelguardians.rendering.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Animated focus ring -->
    <com.pragyan.kernelguardians.rendering.FocusRingView
        android:id="@+id/focusRingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- HUD: Tracking status -->
    <LinearLayout
        android:id="@+id/hudLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAP TO TRACK"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#88000000"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/tvFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: --"
            android:textColor="#FF00FF88"
            android:textSize="11sp"
            android:background="#88000000"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:background="#66000000">

        <Button
            android:id="@+id/btnClearLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR LOCK"
            android:textSize="12sp"
            android:backgroundTint="#FFFF5722"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnToggleBlur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BG BLUR: OFF"
            android:textSize="12sp"
            android:backgroundTint="#FF2196F3" />
    </LinearLayout>

</FrameLayout>
